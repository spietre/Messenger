<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="325" VerticalAlignment="Top" Width="772" Margin="10,10,0,0"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="30" Margin="10,340,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="602" KeyDown="onEnterPressed"/>
        <Button x:Name="sendBtn" Content="Send" HorizontalAlignment="Left" Margin="617,340,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="onSend"/>
        <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="702,340,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="onSave"/>
        <Button x:Name="loadBtn" Content="Load" HorizontalAlignment="Left" Margin="702,375,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="onLoad"/>
        <Button x:Name="clearBtn" Content="Clear" HorizontalAlignment="Left" Margin="617,375,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="onClear"/>

    </Grid>
</Window>
